$currentProjects = $this->query(array(
    'where'    => '{<'.$this->resourceUri.'> foaf:currentProject ?resourceUri.}' . PHP_EOL
        . 'UNION {' . PHP_EOL
        . '?resourceUri doap:maintainer <'.$this->resourceUri.'> .' . PHP_EOL
        . 'FILTER NOT EXISTS { <'.$this->resourceUri.'> foaf:pastProject ?resourceUri } ' . PHP_EOL
        . '} ',
    'template' => 'li',
    'prefix'   => '<h1>Current Projects</h1>',
));
    $query = '{<'.$this->resourceUri.'> foaf:currentProject ?resourceUri.} UNION '.
        '{?resourceUri doap:maintainer <'.$this->resourceUri.'> .} '.
        'FILTER NOT EXISTS {<'.$this->resourceUri.'> foaf:pastProject ?resourceUri. }';
$pastProjects = $this->query(array(
    'where'    => '<'.$this->resourceUri.'> foaf:pastProject ?resourceUri.',
    'template' => 'li',
    'prefix'   => '<h1>Past Projects</h1>',
));
// prepare button row
$query = '
PREFIX aksw: <http://aksw.org/schema/>
SELECT DISTINCT ?resourceUri ?label ?propertyUri
WHERE {
    { <'.$this->resourceUri.'> ?propertyUri ?resourceUri . }
        UNION
    { ?resourceUri ?propertyUri <'.$this->resourceUri.'> . }
    ?propertyUri aksw:buttonLabel ?label
}';
$buttons = $this->querylist($query, 'local/items/buttons.phtml');
