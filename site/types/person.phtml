    //'where'    => '<'.$this->resourceUri.'> foaf:currentProject ?project . ?resourceUri foaf:currentProject ?project .',
    //'template' => 'liplain',
    //'prefix'   => '<li><strong class="headline">works with</strong>',
    //'suffix'   => '</li>'
